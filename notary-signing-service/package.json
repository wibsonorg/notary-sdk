{
  "name": "notary-signing-service",
  "version": "2.0.7",
  "description": "Wibson Notary Signing Service",
  "author": "Wibson Development Team",
  "main": "src/index.js",
  "scripts": {
    "build": "babel src -d dist",
    "serve": "node dist/index.js",
    "start": "nodemon src/index.js",
    "test": "scripts/test.sh",
    "test:coverage": "nyc npm test",
    "test:coverage:ci": "npm run test:coverage > coverage.lcov",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "publish": "scripts/publish.sh $npm_package_name-v$npm_package_version"
  },
  "dependencies": {
    "@babel/polyfill": "^7.2.5",
    "apicache": "^1.2.3",
    "async-redis": "^1.1.4",
    "aws-sdk": "^2.188.0",
    "axios": "^0.18.0",
    "body-parser": "^1.18.3",
    "cors": "^2.8.4",
    "crypto-js": "^3.1.9-1",
    "dotenv": "^6.0.0",
    "elliptic": "^6.4.1",
    "eth-crypto": "^1.3.2",
    "express": "^4.16.3",
    "express-boom": "^2.0.0",
    "helmet": "^3.12.1",
    "level": "^4.0.0",
    "morgan": "1.9.1",
    "node-forge": "^0.7.1",
    "openpgp": "3.1.0",
    "read": "1.0.7",
    "redis": "^2.8.0",
    "request": "^2.87.0",
    "request-promise-native": "^1.0.5",
    "swagger-jsdoc": "^3.2.7",
    "swagger-ui-express": "^3.0.10",
    "web3-utils": "1.0.0-beta.33",
    "winston": "^3.0.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.2.3",
    "@babel/core": "^7.3.4",
    "@babel/node": "^7.2.2",
    "@babel/preset-env": "^7.3.4",
    "@babel/register": "^7.0.0",
    "chai": "^4.1.2",
    "eslint": "^4.19.1",
    "eslint-config-airbnb-base": "^12.1.0",
    "eslint-plugin-import": "^2.12.0",
    "ganache-cli": "^6.1.3",
    "mocha": "^5.2.0",
    "nodemon": "^1.18.10",
    "nyc": "^13.3.0",
    "sinon": "7.2.3",
    "supertest": "^3.1.0"
  },
  "nodemonConfig": {
    "exec": "clear;babel-node",
    "watchedExtensions": [
      "js"
    ],
    "ignore": [
      "__mocks__/*",
      "__test__/*",
      "*.test.js"
    ],
    "delay": "7000"
  },
  "nyc": {
    "check-coverage": true,
    "lines": 50,
    "cache": false,
    "reporter": [
      "html",
      "text",
      "lcov"
    ],
    "exclude": [
      "src/utils/logger.js",
      "src/utils/storage.js",
      "test/**",
      "config/**",
      "babel.config.js"
    ]
  },
  "ava": {
    "files": [
      "**/*.test.js",
      "!**/*.performance.test.js"
    ],
    "sources": [
      "test/**/*",
      "e2e/**/*"
    ],
    "cache": true,
    "concurrency": 5,
    "failWithoutAssertions": false,
    "tap": true,
    "verbose": true,
    "compileEnhancements": false,
    "require": [
      "@babel/register",
      "@babel/polyfill",
      "./test/setup"
    ]
  }
}
